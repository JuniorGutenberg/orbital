<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/back_pressed"
        android:elevation="5dp"
        layout="@layout/back_layout"
        />
    <ImageView
        android:id="@+id/iv_fundo"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        />
    <com.orbital.orbital_ui.component.ORelativeLayout
        android:id="@+id/orls"
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:background="@drawable/back_buscar"
        android:layout_marginStart="10dp"
        android:clickable="true"
        android:layout_marginEnd="10dp"
        android:layout_height="45dp"
        android:focusable="true">

        <AutoCompleteTextView
            android:id="@+id/autoComplete"
            android:layout_width="285dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:dropDownHeight="180dp"
            android:ellipsize="end"
            android:ems="10"
            android:hint="  Pesquisar"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:popupBackground="@color/white"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp" />
        <ImageView
            android:layout_width="28dp"
            android:id="@+id/iv_buscar"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp" />
    </com.orbital.orbital_ui.component.ORelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_selecionados"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="140dp"
        />
    <RelativeLayout
        android:layout_marginTop="220dp"
        android:layout_width="match_parent"
        android:background="@drawable/back_default"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_artistas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp" />
    </RelativeLayout>
    <com.orbital.orbital_ui.component.ORelativeLayout
        android:id="@+id/rl_check"
        android:layout_width="65dp"
        android:elevation="5dp"
        android:background="@drawable/back_circular_laranja"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="25dp"
        android:visibility="visible"
        android:layout_gravity="bottom|end"
        android:layout_height="65dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_correct"
            android:layout_height="25dp"/>
    </com.orbital.orbital_ui.component.ORelativeLayout>
    <include
        android:id="@+id/loading"
        layout="@layout/loading_items"
        android:visibility="gone"
        android:elevation="15dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />
</FrameLayout>