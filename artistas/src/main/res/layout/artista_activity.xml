<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include
        android:id="@+id/toolbar_player"
        layout="@layout/toolbar_player_layout"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:id="@+id/ScrollView_playlist_kinvey"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
               <include
                   android:id="@+id/back_pressed"
                   layout="@layout/back_layout"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="430dp">
                    <ImageSwitcher
                        android:id="@+id/ImageSwitcher_artist_main"
                        android:layout_width="match_parent"
                        android:layout_height="430dp">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:id="@+id/frameLayout_artist_main"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:layout_collapseMode="parallax"
                                android:scaleType="centerCrop"
                                app:layout_collapseParallaxMultiplier="0.7"
                                android:id="@+id/iv_fundo"
                                />
                            <com.github.siyamed.shapeimageview.CircularImageView
                                android:id="@+id/civ"
                                android:elevation="10dp"
                                app:siBorderWidth="1dp"
                                app:siBorderColor="@android:color/white"
                                app:siRadius="2dp"
                                android:layout_marginBottom="25dp"
                                android:layout_width="180dp"
                                android:layout_height="180dp"
                                android:layout_gravity="center"
                                />
                            <TextView
                                android:id="@+id/tv_artista"
                                android:layout_width="290dp"
                                android:layout_height="wrap_content"
                                android:text="Nome"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:layout_gravity="center"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:gravity="center"
                                android:layout_marginTop="90dp"
                                android:textSize="22sp"
                                />
                            <TextView
                                android:id="@+id/tv_listerners"
                                android:layout_width="280dp"
                                android:layout_height="wrap_content"
                                android:text="Nome"
                                android:visibility="gone"
                                android:textColor="@color/principal"
                                android:layout_gravity="center"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:gravity="center"
                                android:layout_marginTop="115dp"
                                android:textSize="16sp"
                                />
                        </FrameLayout>
                    </ImageSwitcher>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="390dp"
                    android:background="@drawable/back_default"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginStart="17dp"
                        android:id="@+id/tv_top_track"
                        android:singleLine="true"
                        android:visibility="gone"
                        android:text="Top tracks"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginTop="50dp"
                        />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:layout_width="50dp"
                            android:layout_gravity="center"
                            android:id="@+id/progressBarTopTracks"
                            android:visibility="gone"
                            android:indeterminateTint="@color/principal"
                            android:layout_height="50dp"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_marginTop="35dp"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/rv_top_track"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/TextViewVermais_artist_main"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="15dp"
                        android:text="Ver Mais..."
                        android:textColor="#FF919191"
                        android:visibility="gone"
                        android:textSize="17sp"
                        android:textStyle="italic" />
                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginStart="17dp"
                        android:id="@+id/tv_top_albuns"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        android:text="Top Albuns"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:layout_width="50dp"
                            android:layout_gravity="center"
                            android:id="@+id/progressBarAlbunsArtista"
                            android:visibility="gone"
                            android:indeterminateTint="@color/principal"
                            android:layout_height="50dp"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_marginTop="35dp"
                            android:layout_marginStart="8dp"
                            android:id="@+id/rv_top_albuns"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>
                    </FrameLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginStart="17dp"
                        android:id="@+id/tv_artista_relacionados"
                        android:singleLine="true"
                        android:text="Artistas Relacionados"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:layout_width="50dp"
                            android:layout_gravity="center"
                            android:id="@+id/progressBarRelacionadosArtista"
                            android:visibility="gone"
                            android:indeterminateTint="@color/principal"
                            android:layout_height="50dp"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_marginTop="35dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="45dp"
                            android:id="@+id/rv_artista_relacionados"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>
                    </FrameLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="360dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="220dp"
                        android:id="@+id/relative"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back_button_laranja"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="Play"
                            android:gravity="center"
                            android:textSize="23sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="50dp"
                        android:id="@+id/relativeAleatorio"
                        android:layout_toEndOf="@id/relative"
                        android:layout_marginLeft="60dp"
                        android:layout_centerVertical="true"
                        android:layout_height="50dp"
                        android:background="@drawable/back_circular_laranja"
                        >
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_shuffle"
                            />
                    </RelativeLayout>
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
